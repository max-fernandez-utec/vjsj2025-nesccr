-- capa de fondo


stars={
	stars={},
	
	ini=function()
		for i=1,40 do
			local c=rnd({5,6,7})
			local ts={0,0,1}
			local vs={.2,.7,1}
			
			add(stars.stars, {
				x=flr(rnd(128)),
				y=flr(rnd(128)),
				c=c,
				t=ts[c-4],
				v=vs[c-4]
			})
		end
	end,
	
	upd=function()
		for s in all(stars.stars) do
			s.y+=s.v
			
			if (s.y>130) s.y=0
		end
	end,
	
	drw=function()
		for s in all(stars.stars) do
			circfill(s.x,s.y,s.t,s.c)
		end
	end
}
